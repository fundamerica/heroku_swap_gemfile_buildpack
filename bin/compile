#!/bin/sh

if [ -f $3/BUNDLE_GEMFILE ]; then
  echo "Opening $3/BUNDLE_GEMFILE"
  $gemfile=`cat $3/BUNDLE_GEMFILE`
  echo "found contents: $gemfile"

  if [ -f "$1/$gemfile" ]; then
    echo "Replacing $1/Gemfile(.lock) with $1/$gemfile(.lock)"
    cp "$1/$gemfile" $1/Gemfile
    cp "$1/$gemfile.lock" $1/Gemfile.lock
  else
    echo "$1/$gemfile DOES NOT EXIST"
    exit 1
  fi

  exit 0
else
  exit 0
fi
